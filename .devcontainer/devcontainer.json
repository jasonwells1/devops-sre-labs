{
  "name": "devops-sre-labs",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".",
    "args": {
      "TERRAFORM_VERSION": "1.9.6",
      "KUBECTL_VERSION": "1.30.3",
      "HELM_VERSION": "3.15.3",
      "AWSCLI_VERSION": "2.17.64",
      "TFSEC_VERSION": "1.28.6",
      "TFLINT_VERSION": "0.53.0",
      "TRIVY_VERSION": "0.55.2"
    }
  },
  "features": {},
  "remoteUser": "vscode",
  "mounts": [
    "source=/.aws,target=/home/vscode/.aws,type=bind,consistency=cached,readonly"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.makefile-tools",
        "ms-azuretools.vscode-docker",
        "hashicorp.terraform",
        "redhat.vscode-yaml",
        "foxundermoon.shell-format",
        "streetsidesoftware.code-spell-checker",
        "eamodio.gitlens",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/postcreate.sh"
}
